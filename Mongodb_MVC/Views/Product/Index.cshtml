@model List<Product>
<h2>Product List</h2>
<form class="position-relative col-4" asp-action="Index" method="get">
    <div class="input-group input-group-merge navbar-input-group ">
        <input type="search" class="js-form-search form-control" name="text" placeholder="Search..." value="@ViewBag.text">
        <button>
            Tìm kiếm
        </button>
    </div>
</form>
<a href="/Product/Create">Create New</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Thời gian thêm mới</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td> @String.Format("{0:MM/dd/yyyy}", @item.CreateDate) </td>
                <td>
                    @if (@item.Status == true)
                    {
                        <span>Hiển thị</span>
                    }
                    else
                    {
                        <span>Ẩn</span>
                    }

                </td>
                <td><a href="/Product/Update/@item.Id">Update</a> &nbsp; &nbsp;<a href="/Product/Delete/@item.Id">Delete</a></td>
            </tr>
        }

    </tbody>
</table>

